<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape
        android:shape="rectangle">
        <solid android:color="#f000"/>
        <stroke android:width="1px" android:color="#bb000000"/>
        <gradient
            android:angle="0"
            android:startColor="@color/darkBlue"
            android:endColor="@color/darkBlue"
            android:type="linear" />
        <padding 
            android:left="10dp"
            android:right="10dp"
            android:top="7dp"
            android:bottom="7dp"/>
        <corners 
            android:radius="3dp"/>
    </shape>
</item>
</selector>